#include <bits/stdc++.h>
using namespace std;

struct players {
    string name ;
    int score ;
};

int main() {
    vector <players> players ;
    while (true)
    {
        cout << "Menu: " << endl;
        cout << "1. Add the name of the new player and his score " << endl;
        cout << "2. Print top 10 players " << endl;
        cout << "3. Enter the name of the player that you want to know his score " << endl;
        cout << "4. Exit " << endl;
        cout << " Please enter your choice: " ;

        int c ;
        cin >> c ;

        if ( c == 1 )
        {
            if (players.size() < 10 )
            {
                struct players New ;
                cout << "Enter the name: ";
                cin >> New.name;
                cout << "Enter the score: ";
                cin >> New.score;
                players.push_back(New) ;
            } else
            {
                cout << "The list is full ";
            }
        } /*else if (c == 2)
        {

        }*/else if (c==3)
        {
            string Name ;
            cout << "Enter player name: ";
            cin >> Name ;
            int x = 0 ;
            for (const struct players& players : players ) {
                if (players.name == Name && players.score > x) {
                    x = players.score;
                }
            }
                if ( x > 0 )
                {
                    cout << "Name: " << Name << " , Score: " << x <<endl;
                } else
                {
                    cout << "Not found in top 10" ;
                }
        }else if (c==4)
        {
            break ;
        }
    }
}
